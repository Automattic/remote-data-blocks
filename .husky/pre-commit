if [ -d "$(git rev-parse --git-path rebase-merge)" ] || [ -d "$(git rev-parse --git-path rebase-apply)" ]; then
  echo "Rebase in progress. Skipping pre-commit hook.\n"
  exit 0
fi

lint-staged
npm run check-types # Run tsc on the whole project, as running it only on staged files may result in import or type errors.
